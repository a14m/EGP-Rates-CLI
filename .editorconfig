# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,yaml,haml}]
indent_size = 2

[*.rb]
indent_size = 2

[*.{html,erb}]
indent_size = 4

[*.js]
indent_size = 4

[*.coffee]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2
